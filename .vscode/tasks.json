{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Safe Delete File",
            "type": "shell",
            "command": "./scripts/safe-delete.sh",
            "args": [
                "${file}"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        },
        {
            "label": "Safe Delete Multiple Files",
            "type": "shell",
            "command": "./scripts/safe-delete.sh",
            "args": [
                "${selectedFiles}"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        },
        {
            "label": "Empty Trash",
            "type": "shell",
            "command": "rm",
            "args": [
                "-rf",
                ".trash/*"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        },
        {
            "label": "Show Trash Contents",
            "type": "shell",
            "command": "ls",
            "args": [
                "-la",
                ".trash/"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        }
    ]
}
